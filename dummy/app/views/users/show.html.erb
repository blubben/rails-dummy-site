<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <% if @user.website.present? %>
      <h1>
        <%= link_to "website", @user.website %>
      </h1>
      <% end%>
    </section>
  </aside>
</div>
